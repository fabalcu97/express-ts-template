{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "typeRoots": [
      "./src/types"
    ],
    "noImplicitAny": false
  },
  "exclude": [
    "dist",
  ],
  "watchOptions": {
    "excludeDirectories": [
      "node_modules",
      "dist"
    ]
  }
}
